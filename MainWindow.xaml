<Window x:Class="CustomGridControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomGridControl"
        mc:Ignorable="d"
        Title="Custom Grid Control - Telerik" Height="600" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,0">
            <Button Name="Test170ColumnsButton" Content="Test 170 Columns" Click="Test170ColumnsButton_Click" Margin="0,0,10,0"/>
            <Button Name="Test5ColumnsButton" Content="Reset to 5 Columns" Click="Test5ColumnsButton_Click" Margin="0,0,10,0"/>
            <TextBlock Name="StatusText" Text="Current: 5 columns" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Blue"/>
        </StackPanel>
        
        <!-- Dynamic Grid -->
        <local:TelerikCustomDataGrid x:Name="MainGrid" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
