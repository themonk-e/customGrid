<Window x:Class="CustomGridControl.Views.ConnectionConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Connection Configuration" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <StackPanel Margin="20">
        <TextBlock Text="Database Connection Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Server Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="ServerTextBox" Margin="0,0,0,15" Padding="5" Text="localhost"/>

        <TextBlock Text="Database Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="DatabaseTextBox" Margin="0,0,0,15" Padding="5"/>

        <CheckBox x:Name="IntegratedSecurityCheckBox" 
                  Content="Use Windows Authentication (Integrated Security)" 
                  IsChecked="True" 
                  Margin="0,0,0,15" 
                  Checked="IntegratedSecurityCheckBox_Changed" 
                  Unchecked="IntegratedSecurityCheckBox_Changed"/>

        <StackPanel x:Name="SqlAuthPanel" Visibility="Collapsed">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Test Connection" Click="TestConnection_Click" Padding="15,8" Margin="0,0,10,0"/>
            <Button Content="Save &amp; Continue" Click="SaveButton_Click" Padding="15,8" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Click="CancelButton_Click" Padding="15,8" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
