<Window x:Class="CustomGridControl.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CustomGridControl"
        Title="Dynamic Grid Test - 170 Columns" Height="700" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Column Count:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="ColumnCountTextBox" Text="170" Width="60" VerticalAlignment="Center"/>
            <Button Name="UpdateColumnsButton" Content="Update Columns" Margin="10,0,0,0" Click="UpdateColumnsButton_Click"/>
            <TextBlock Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Blue"/>
        </StackPanel>
        
        <!-- Dynamic Grid -->
        <local:TelerikCustomDataGrid x:Name="DynamicGrid" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>